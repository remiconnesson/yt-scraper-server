# Zyte API Configuration
# Your Zyte API key for proxy usage (required)
ZYTE_API_KEY=your_zyte_api_key_here

# Zyte host (defaults to api.zyte.com if not set)
ZYTE_HOST=api.zyte.com

# Datacenter Proxy Configuration
# Optional datacenter proxy in format: user:pass@host:port or full URL
DATACENTER_PROXY=user:pass@proxy.example.com:8080

# API Authentication
# Password for authenticating API requests (required)
API_PASSWORD=your_strong_api_password_here

# Vercel Blob Storage
# Read/write token for Vercel Blob upload (required)
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# Optional Configuration
# Image quality for slide extraction (default: 80)
SLIDE_IMAGE_QUALITY=80

# Download retention hours (default: 24)
DOWNLOAD_RETENTION_HOURS=24

# Graceful shutdown timeout in seconds (default: 1800)
GRACEFUL_SHUTDOWN_TIMEOUT_SECONDS=1800
